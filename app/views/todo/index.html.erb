      <h1>Workshop Todo List</h1>
      <ul class="card">
      <% @todo.each do |todo| %>
          <li>
              <input type="checkbox"><a href="show/<%=todo.id %>"><%=todo.description%></a>
              <span class="pomodoro-estimate small-Pomodoro-estimate"><%=todo.Pomodoro_estimate%> Pomodoro</span>
              </li>
             <% end %>
      </ul>
      <a href="/todo/new" class="simple-link"><input id="add-new-todo-button" type="submit" value="Add Todo"></a>
      <script>
        $(document).ready(function() {
// Strike through todo when its checkbox it clicked 
    $("ul").on("click", "input[type=checkbox]", function(){
        $(this).closest("li").toggleClass("completed-todo")
    })
})
      </script>